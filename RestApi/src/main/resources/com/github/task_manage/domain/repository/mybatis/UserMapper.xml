<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.task_manage.domain.repository.mybatis.UserMapper">
	<!-- マッピング定義 -->
    <resultMap type="com.github.task_manage.domain.model.User" id="User">
        <result column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="mail_address" property="mailAddress" />
        <result column="password" property="password" />
        <result column="user_role" property="userRole" />
    </resultMap>

	<!-- １件insert -->
    <insert id="insert" parameterType="com.github.task_manage.domain.model.User">
        INSERT INTO user (
            user_id,
			user_name,
			mail_address,
			password,
			user_role)
        VALUES (
            #{userId},
            #{userName},
            #{mailAddress},
            #{password},
            #{userRole})
    </insert>

    <!-- ユーザー検索 -->
    <select id="selectUserByAddressAndPassword" parameterType="com.github.task_manage.domain.model.SearchUser" resultMap="User">
    	SELECT
    		user_id,
			user_name,
			mail_address,
			password,
			user_role
        FROM
            user
		WHERE
			mail_address = #{mailAddress}
    </select>

	<!-- １件更新 -->
    <update id="update" parameterType="com.github.task_manage.domain.model.User">
        UPDATE user
        SET
            user_name = #{userName},
            mail_address = #{mailAddress},
            password = #{password},
            user_role = #{userRole}
        WHERE user_id = #{userId}
    </update>

    <!-- １件削除 -->
    <delete id="delete" parameterType="int">
        DELETE FROM user WHERE user_id = #{userId}
    </delete>
</mapper>